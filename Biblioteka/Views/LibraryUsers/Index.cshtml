@model LibraryUserViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Czytelnicy</h1>

<p>
    <a asp-action="Create">Dodaj czytelnika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Czytelnicy.First().Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Czytelnicy.First().Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Czytelnicy.First().Adres)
            </th>
            <th>
                Ilość wyporzyczeń
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Czytelnicy) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Model.Wyporzyczenia.Count(w => w.Wyporzyczajacy==item)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edycja</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
            </td>
        </tr>
}
    </tbody>
</table>
