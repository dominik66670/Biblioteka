@model Biblioteka.Models.AutorViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor.DataUrodzenia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.DataUrodzenia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor.DataSmierci)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.DataSmierci)
        </dd>
        <dt class="col-sm-2">
            Książki napisane przez @Html.DisplayFor(model => model.Autor.Nazwa)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Dziela != null)
            {
                @foreach (var zasob in Model.Dziela)
                {
                    <a asp-controller="Zasobs" asp-action="Details" asp-route-id="@zasob.Id">@Html.DisplayFor(modelItem => zasob.Tytul)</a>
                }

            }
            else
            {
                <p>W bibliotece nie posiadamy dzieł tego autora</p>
            }
            
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Autor.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
