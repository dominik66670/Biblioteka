@model Biblioteka.Models.Wyporzyczenie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Wyporzyczenie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wyporzyczajacy.Imie)
            @Html.DisplayNameFor(model => model.Wyporzyczajacy.Nazwisko)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wyporzyczajacy.Imie)
            @Html.DisplayFor(model => model.Wyporzyczajacy.Nazwisko)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ObecnyStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ObecnyStatus.Nazwa)
        </dd>

        <dt class="col-sm-2">
            Numer biblioteczny
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Zbiors" asp-action="Details" asp-route-id=@Model.WyporzyczanyZbior.Id>@Html.DisplayFor(model => model.WyporzyczanyZbior.Id)</a>
        </dd>

        <dt class="col-sm-2">
            Zasób
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Zasobss" asp-action="Details" asp-route-id=@Model.WyporzyczanyZbior.Zasob.Id>@Html.DisplayFor(model => model.WyporzyczanyZbior.Zasob.Tytul)</a>
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataWyporzyczenia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataWyporzyczenia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataZwrotu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataZwrotu)
        </dd>
        @if (!Model.ObecnyStatus.Nazwa.Equals("Zakończone"))
        {
            <a asp-action="Zwrot" asp-route-id="@Model.Id">Zwróć</a>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
