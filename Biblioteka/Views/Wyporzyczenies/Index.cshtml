@model WyporzyczeniaViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Wyporzyczenia</h1>

<p>
    <a asp-action="Create">Wyporzycz</a>
</p>
<form asp-controller="Wyporzyczenies" asp-action="Index" method="get">
    <p>
        Szukaj po : <select name="searchField" >
            <option selected="true" value="1">Imie i Nazwisko</option>
            <option value="2">Id Zbioru</option>
        </select>
        <input type="text" name="searchString" /></br>
        Status</br>
        <select multiple name="szukanyStatus">
            @foreach(var item in Model.statuses)
            {
                <option value="@item.Id">@item.Nazwa</option>
            }
        </select><br />
        Sortowanie<br />
        Rosnące <input type="radio" name="order" value="asc" checked="true" /><br />
        Malejące <input type="radio" name="order" value="dsc" /><br />
        <input type="submit" value="Szukaj" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.wyporzyczenies.First().ObecnyStatus.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wyporzyczenies.First().DataWyporzyczenia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wyporzyczenies.First().DataZwrotu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wyporzyczenies.First().Wyporzyczajacy)
            </th>
            <th>
                Kod zbioru
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wyporzyczenies.First().WyporzyczanyZbior.Zasob)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.wyporzyczenies) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.ObecnyStatus.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataWyporzyczenia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataZwrotu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wyporzyczajacy.Imie)
                @Html.DisplayFor(modelItem => item.Wyporzyczajacy.Nazwisko)
            </td>
            <td>
                 <a asp-controller="Zbiors" asp-action="Details" asp-route-id="@item.WyporzyczanyZbior.Id">@Html.DisplayFor(modelItem => item.WyporzyczanyZbior.Id)</a>
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.WyporzyczanyZbior.Zasob.Tytul)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                    @if (!item.ObecnyStatus.Nazwa.Equals("Zakończone"))
                    {
                        <a asp-action="Zwrot" asp-route-id="@item.Id">Zwróć</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
